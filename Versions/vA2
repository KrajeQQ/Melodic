<script>
function launchAppKrajeQ() {
    document.getElementById("homescreen").style.display = "none";
    var newIframe = document.createElement("iframe");
    newIframe.src = "https://krajeq.netlify.app/";
    newIframe.classList.add("appopened");
    
    document.body.appendChild(newIframe);
};
function launchAppAuitent() {
    document.getElementById("homescreen").style.display = "none";
    var newIframe = document.createElement("iframe");
    newIframe.src = "https://auitent.netlify.app/";
    newIframe.classList.add("appopened");
    
    document.body.appendChild(newIframe);
};
function openActionBar() {
  document.getElementById("actionbar").style.display = "none";
  document.getElementById("homescreen").style.display = "none";
  document.getElementById("actionbaropen").style.display = "block";
}
function closeActionBar() {
  document.getElementById("actionbar").style.display = "block";
  document.getElementById("homescreen").style.display = "block";
  document.getElementById("actionbaropen").style.display = "none";
}
</script>
